import random 

word_list = ["Apple", "Plum", "Grape", "Orange", "Apricot"] 

print(word_list)

word = random.choice(word_list)

print(word)

while True:
    try: 
        guess = input("Enter a single letter ")
        if len(guess) == 1 and guess.isalpha() :
            print("Good guess!")
            break
        else: 
            print("Oops! That is not a vaild input.")
    except Exception as e:
        print(e)